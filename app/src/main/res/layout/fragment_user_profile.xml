<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserProfileFragment"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="80px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:layout_marginBottom="100px"
            android:src="@drawable/up"
            app:civ_border_color="@color/negro"
            app:civ_border_width="5dp"/>

        <TextView
            android:id="@+id/nombre"
            android:layout_gravity="left"
            android:text="Nombre"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/userEmail"
            android:layout_gravity="left"
            android:text="Correo Electrónico"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/userBio"
            android:layout_gravity="left"
            android:text="Biografía"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"/>

        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/modifyProfile"
            android:layout_margin="24dp"
            android:padding="24dp"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:buttonRippleColor="#ffffff"
            android:text="Guardar Cambios"/>

    </LinearLayout>


</LinearLayout>