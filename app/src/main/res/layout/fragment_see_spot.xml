<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SeeSpotFragment"
    android:orientation="vertical"
    android:padding="100px">


    <TextView
        android:id="@+id/spot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spot de ejemplo"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="50px"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/spot_img"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:src="@drawable/spot_img"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/spot_labels"
            android:textStyle="italic"
            android:text="#Spot #Ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/spot_description"
            android:text="DescripciÃ³n del Spot:"
            android:textStyle="bold"
            android:textSize="60px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Lugar con buenas vistas. \n\nDificil encontrar aparcamiento, hay un parking de pago."
            android:textSize="18sp"
            android:layout_gravity="center"/>


        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/btn_delete_spot"
            android:layout_marginTop="50dp"
            android:padding="24dp"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:buttonRippleColor="#ffffff"
            android:text="Eliminar Spot"/>

    </LinearLayout>

</LinearLayout>