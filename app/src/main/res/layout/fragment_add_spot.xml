<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddSpotFragment">

<!--  Eliminar Fragment, sustituir por New Spot  -->

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/btn_new_spot"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:gravity="center"
            android:padding="24dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:buttonRippleColor="#ffffff"
            android:text="AÃ±adir Spot"/>

        <androidx.recyclerview.widget.RecyclerView
            android:padding="10dp"
            android:id="@+id/spot_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>


</FrameLayout>