<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:gravity="center">


        <life.sabujak.roundedbutton.RoundedButton
            android:layout_margin="24dp"
            android:gravity="center"
            android:padding="24dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Editar Perfil"
            app:buttonRippleColor="#ffffff"
            android:id="@+id/btn_ver_perfil"/>

        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/btn_add_spot"
            android:layout_margin="24dp"
            android:gravity="center"
            android:padding="24dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="AÃ±adir Spot"
            app:buttonRippleColor="#ffffff"/>

        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/btn_manage_spot"
            android:layout_margin="24dp"
            android:gravity="center"
            android:padding="24dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Gestionar Spots"
            app:buttonRippleColor="#ffffff"/>

        <life.sabujak.roundedbutton.RoundedButton
            android:id="@+id/btn_see_spot"
            android:layout_margin="24dp"
            android:gravity="center"
            android:padding="24dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            app:buttonGradientStartColor="@color/botonU"
            app:buttonGradientEndColor="@color/botonD"
            app:buttonCornerRadius="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ver Spots"
            app:buttonRippleColor="#ffffff"/>

</LinearLayout>